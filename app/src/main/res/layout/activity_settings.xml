<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detection Thresholds"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entropy Threshold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvEntropyValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="24sp"
            android:textColor="#10B981" />

        <SeekBar
            android:id="@+id/seekBarEntropy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KL-Divergence Threshold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tvKLValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.10"
            android:textSize="24sp"
            android:textColor="#10B981" />

        <SeekBar
            android:id="@+id/seekBarKL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confidence Score Threshold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tvConfidenceValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="70"
            android:textSize="24sp"
            android:textColor="#10B981" />

        <SeekBar
            android:id="@+id/seekBarConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>
</ScrollView>
