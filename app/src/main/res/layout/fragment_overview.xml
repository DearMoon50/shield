<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTotalEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#1E293B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Events"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvActiveThreats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textColor="#EF4444"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#1E293B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Threats"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvLatency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 ms"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#1E293B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detection Latency"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvCpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0%"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#1E293B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPU Usage"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvMemory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 MB"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#1E293B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory Usage"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvHeap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 MB"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#1E293B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heap Usage"
            android:gravity="center"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
